<header>
    <nav>
        <%= nav_link_to image_tag("logo.png"), root_path %>
        <ul class="left">
            <li><%= nav_link_to "Released", movies_path %></li>
            <li><%= nav_link_to "Upcoming", filtered_movies_path(:upcoming) %></li>
            <li><%= nav_link_to "Recent", filtered_movies_path(:recent) %></li>
            <li><%= nav_link_to "Hits", filtered_movies_path(:hits) %></li>
            <li><%= nav_link_to "Flops", filtered_movies_path(:flops) %></li>
        </ul>
        <ul class="right">
            <% if current_user %>
                <li><%= link_to current_user.username.capitalize, current_user %></li>
                <li><%= link_to "Account", edit_user_path(current_user) %></li>
                <li><%= link_to "Sign Out", session_path(current_user), method: :delete, class: "button" %></li>
            <% else %>
                <li>
                    <%= link_to "Sign in", signin_path, class: "button" %>
                </li>
            <% end %>
            
        </ul>
    </nav>
</header>